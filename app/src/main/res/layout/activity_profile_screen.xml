<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/darkest_color"
        android:gravity="center_horizontal"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <ImageButton
        android:id="@+id/edit_but"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/darkest_color"
        android:src="@drawable/ic_baseline_edit_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/circle_initials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/profile_circle"
            android:gravity="center"
            android:text="DM"
            android:textColor="@color/white"
            android:textSize="60dp" />

        <ListView
            android:id="@+id/interest_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"
            android:orientation="vertical" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Answer my ice-breaker:"
        android:textColor="@color/darkest_color"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/icebreaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Super power of choice?"
        android:textColor="@color/darkest_color"
        android:textSize="18dp" />

    <ListView
        android:id="@+id/links_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:paddingBottom="20dp"
        android:orientation="vertical" />

</LinearLayout>