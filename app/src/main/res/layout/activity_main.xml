<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NameEntry"
    android:background="#0671b6">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        android:rotation="90"
        android:alpha="0.5"/>

    <LinearLayout
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social Exchange"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_marginBottom="40dp"/>

        <Button
            android:id="@+id/new_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New User"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/returning_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Returning User"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/erase_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[DEBUG] Erase All Contacts"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/darker_grey"
            android:layout_marginTop="50dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>